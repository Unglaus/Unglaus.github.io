@media ( max-width 1023px )
  .hide.navBtn
    transform translateY(-2em)
  :is(.moving, .up) nav
    overflow visible
  .moving
    pointer-events none
    .navBtn
      pointer-events none
    .search-header,
    .search-popup
      transition unset
      pointer-events none
    .navContent
      overflow visible

  .up
    .search-popup
      left 100vw
      transform translateX(0)
      &.open
        transform translateX(-100%)
    article
      margin-top 50px
    .closed
      .navBtn
        transform translateY(-.5em)
      .navContent
        overflow visible
    #search-header
      padding .5em 2em 0 5em
      animation get-in-top .3s
      position absolute
      transform translateX(-100%)
      input
        animation none
    .search-popup
      top 55px
      height calc(100vh - 55px)
      background-color var(--theme-bg-trans0)

  #search-header
    top 0
    width 100%
    box-sizing border-box
    transform translateX(-100%)
    .navItemTitle
      border-color var(--theme-border-light)

  .expanded #search-header
    transition transform .6s
    transform translateX(0)
  
  .down.moving header:not(.expanded) #search-header
    animation get-out-top .3s

  .search-popup
    left 0
    right 0
    transform translateX(-100%)
    &.open
      transform translateX(0%)

@media ( max-width 768px )
  .up header:not(.expanded) #search-header
    left 100vw

animate-up(distance)
  @keyframes get-out-top
    0%
      padding .5em 2em 0 5em
      left distance
      transform translate(-100%, 0)
      position absolute
    100%
      padding .5em 2em 0 5em
      left distance
      position absolute
      transform translate(-100%, -100%)

@media ( min-width 769px )
  animate-up(calc(100vw - 238px))

@media ( max-width 768px )
  animate-up(100vw)

@keyframes get-in-top
  0%
    padding .5em 2em 0 5em
    transform translate(-100%, -100%)
  100%
    padding .5em 2em 0 5em
    transform translate(-100%, 0)

